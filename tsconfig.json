{
	"compileOnSave": true,
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"outDir": "build/",
		"removeComments": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": false,
		"inlineSourceMap": false,
		"stripInternal": true,
		"target": "es2015",
		"watch": false, // true breaks circleci

		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"skipLibCheck": true // false chokes on errors in node_modules/**/.d.ts
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/**/*.test.ts",
		"build/**",
		"node_modules/**/*.ts"
	]
}
